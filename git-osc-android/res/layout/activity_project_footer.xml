<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_grid"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/project_readme"
        style="@style/project_detail_layout_style" >

        <ImageView
            style="@style/project_detail_mid_grid_item_img"
            android:contentDescription="@string/img_description"
            android:background="@drawable/file" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Readme" />

        <ImageView
            style="@style/project_detail_sorrow_img"
            android:contentDescription="@string/img_description" />
    </LinearLayout>

    <View
        style="@style/project_detail_h_line" />

    <LinearLayout 
        android:id="@+id/project_issues"
        style="@style/project_detail_layout_style" >

        <ImageView
            style="@style/project_detail_mid_grid_item_img"
            android:contentDescription="@string/img_description"
            android:background="@drawable/flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="问题" />

        <ImageView
            style="@style/project_detail_sorrow_img"
            android:contentDescription="@string/img_description" />
    </LinearLayout>

    <View
        style="@style/project_detail_h_line" />

    <LinearLayout 
        android:id="@+id/project_commits"
        style="@style/project_detail_layout_style"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:background="@drawable/commit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提交" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/widget_right_icon" />
    </LinearLayout>

    <View
        style="@style/project_detail_h_line"
        android:visibility="gone" />

    <LinearLayout 
        android:id="@+id/project_code"
        style="@style/project_detail_layout_style" >

        <ImageView
            style="@style/project_detail_mid_grid_item_img"
            android:contentDescription="@string/img_description"
            android:background="@drawable/script" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="代码" />

        <ImageView
            style="@style/project_detail_sorrow_img"
            android:contentDescription="@string/img_description" />
    </LinearLayout>

    <View
        style="@style/project_detail_h_line" />

</LinearLayout>