<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="15dip"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/project_star"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/project_layout_item_selector"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/project_star_stared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/unstar"
            android:gravity="center"
            android:layout_margin="10dip" />

        <TextView
            android:id="@+id/project_starnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:padding="2dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/project_watch"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/project_layout_item_selector"
        android:layout_marginLeft="50dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/project_watch_stared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/unwatch"
            android:gravity="center"
            android:layout_margin="10dip" />

        <TextView
            android:id="@+id/project_watchnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dip"
            android:text="100" />
    </LinearLayout>

</LinearLayout>