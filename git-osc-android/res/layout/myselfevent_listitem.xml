<?xml version="1.0" encoding="utf-8"?>
<!-- 个人动态列表项布局 -->  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:paddingBottom="7dip">   
	
    <ImageView 
    	android:id="@+id/event_listitem_userface"
      	style="@style/UserFaceImageStyle"/>

	<LinearLayout
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginLeft="6dip">   
	       	
	    <TextView 
       		android:id="@+id/event_listitem_username"  
    		android:layout_width="wrap_content" 
           	android:layout_height="wrap_content" 
       	    android:includeFontPadding="false"
           	android:textSize="@dimen/text_size_12"
            android:textColor="@color/listitem_gray"/>
        
		<TextView
			android:id="@+id/event_listitem_content" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginTop="8dip"
			android:textSize="@dimen/text_size_15"
			android:textColor="@color/listitem_black"
			android:textColorLink="@color/listitem_blue"
			android:autoLink="web|email"/>
		<LinearLayout 
	    	android:orientation="horizontal" 
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dip">
	        <!-- 来自哪里（android/iphone） -->   
	        <TextView 
	        	android:id="@+id/event_listitem_client" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
	         	android:layout_marginRight="10dip"
	         	android:textSize="@dimen/text_size_10"
	         	android:textColor="@color/listitem_gray"/>
		    
	        <TextView 
	        	android:id="@+id/event_listitem_date" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
	         	android:textSize="@dimen/text_size_10"
	         	android:textColor="@color/listitem_gray"/>
		        
        </LinearLayout>
	</LinearLayout>
	

</LinearLayout> 
