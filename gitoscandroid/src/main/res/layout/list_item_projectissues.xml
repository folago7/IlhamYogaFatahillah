<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <net.oschina.gitapp.widget.CircleImageView
        android:id="@+id/iv_portrait"
        style="@style/UserFaceImageStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/project_list_title" />

        <TextView
            android:id="@+id/tv_description"
            android:maxLines="3"
            android:ellipsize="end"
            style="@style/project_list_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_author"
                style="@style/project_list_someinfo" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/project_list_someinfo"
                android:layout_marginLeft="10dip" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:src="@drawable/widget_comment_count_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_comment_count"
                style="@style/project_list_someinfo"
                android:layout_marginLeft="3dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>